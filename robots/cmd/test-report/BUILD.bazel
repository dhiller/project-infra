load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = ["main.go"],
    embedsrcs = [
        "test-report.gohtml",
        "compute-config.yaml",
        "default-config.yaml",
        "network-config.yaml",
        "storage-config.yaml",
        "ssp-config.yaml",
    ],
    importpath = "kubevirt.io/project-infra/robots/cmd/test-report",
    visibility = ["//visibility:private"],
    deps = [
        "//robots/pkg/flakefinder:go_default_library",
        "//robots/pkg/test-report:go_default_library",
        "@com_github_bndr_gojenkins//:go_default_library",
        "@com_github_sirupsen_logrus//:go_default_library",
        "@com_github_spf13_cobra//:go_default_library",
        "@in_gopkg_yaml_v2//:go_default_library",
    ],
)

load("@io_bazel_rules_docker//go:image.bzl", "go_image")

go_image(
    name = "app",
    embed = [":go_default_library"],
)

load("@io_bazel_rules_docker//container:container.bzl", "container_push")

container_push(
    name = "push",
    format = "Docker",
    image = ":app",
    registry = "quay.io",
    repository = "kubevirtci/test-report",
    tag = "{DOCKER_TAG}",
)

go_binary(
    name = "test-report",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "go_default_test",
    srcs = ["main_test.go"],
    data = glob(["testdata/**"]),
    embed = [":go_default_library"],
    deps = [
        "//robots/pkg/test-report:go_default_library",
        "@com_github_sirupsen_logrus//:go_default_library",
    ],
)
